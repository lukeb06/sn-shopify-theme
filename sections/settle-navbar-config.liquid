{% comment %} {%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * 0.75);
    padding-bottom: calc({{ section.settings.padding_bottom }}px  * 0.75);
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="section-{{ section.id }}-padding">
    {{ section.settings.custom_liquid }}
  </div>
</div> {% endcomment %}


<div 
	class="d-none nav-item-config"
	data-find="{{ section.settings.find }}"
	data-visible="{{ section.settings.visible }}"
	data-variablevisibility="{{ section.settings.variable_visibility }}"
	data-startdate="{{ section.settings.start_date }}"
	data-enddate="{{ section.settings.end_date }}"
></div>

{% schema %}
{
	"name": "NavItem Config",
	"tag": "section",
	"class": "nosection",
	"enabled_on": {
		"groups": ["header"]
	},
	"settings": [
		{
			"type": "text",
			"id": "find",
			"label": "Nav Item Title",
			"info": "This will be the nav item that you are targeting.",
			"placeholder": "ex. Garden Center"
		},
		{
			"type": "checkbox",
			"id": "visible",
			"label": "Visible",
			"default": true,
		},
		{
			"type": "header",
			"content": "Variable Visibility"
		},
		{
			"type": "checkbox",
			"id": "variable_visibility",
			"label": "Enable variable visibility",
			"default": false,
			"info": "This will make the visibility of the nav item change based on the provided dates."
		},
		{
			"type": "text",
			"id": "start_date",
			"label": "Start Date",
			"placeholder": "ex. Jan 1"
		},
		{
			"type": "text",
			"id": "end_date",
			"label": "End Date",
			"placeholder": "ex. Jan 31"
		}
	],
	"presets": [
	{
		"name": "NavItem Config"
	}
	]
}
{% endschema %}
